<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuroi.contract">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 相机使用 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application>
        <activity
            android:name=".activity.ConMainActivity"
            android:label="@string/app_name_con"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.ConAddActivity"
            android:label="@string/title_activity_add_con"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.ConDetailActivity"
            android:label="@string/title_activity_detail_con"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConModifyActivity"
            android:label="@string/title_activity_modify_con"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.ConShowActivity"
            android:label="@string/title_activity_show_con" />
        <activity
            android:name=".activity.ConKLActivity"
            android:label="@string/title_activity_con_kl" />
        <activity
            android:name=".activity.ConCGActivity"
            android:label="@string/title_activity_con_cg" />
        <activity
            android:name=".activity.ConPicActivity"
            android:label="@string/title_activity_con_pic" />
    </application>

</manifest>
